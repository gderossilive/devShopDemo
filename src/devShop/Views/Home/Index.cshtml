@{
    ViewBag.Title = "devShop - Home";
}

<div class="jumbotron">
    <h1>Welcome to devShop!</h1>
    <p class="lead">Your one-stop shop for all technology needs</p>
    <p><a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg">Browse Products &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Featured Products</h2>
        <hr />
    </div>
</div>

<div class="row">
    @if (ViewBag.FeaturedProducts != null)
    {
        foreach (var product in ViewBag.FeaturedProducts)
        {
            <div class="col-md-4">
                <div class="panel panel-default product-card">
                    <div class="panel-body">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.ProductName" class="img-responsive" style="height: 200px; width: 100%; object-fit: cover;" />
                        }
                        else
                        {
                            <div style="height: 200px; background-color: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                                <span class="text-muted">No Image</span>
                            </div>
                        }
                        <h3>@product.ProductName</h3>
                        <p>@Html.Raw(product.Description?.Substring(0, Math.Min(100, product.Description.Length ?? 0)) + "...")</p>
                        <p><strong>Price: $@product.UnitPrice.ToString("F2")</strong></p>
                        <p class="text-muted">In Stock: @product.UnitsInStock</p>
                        <a href="@Url.Action("Details", "Products", new { id = product.ProductID })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-md-12">
            <p class="text-muted">No featured products available.</p>
        </div>
    }
</div>

<div class="row" style="margin-top: 30px;">
    <div class="col-md-12">
        <h2>Browse by Category</h2>
        <hr />
    </div>
</div>

<div class="row">
    @if (ViewBag.Categories != null)
    {
        foreach (var category in ViewBag.Categories)
        {
            <div class="col-md-3">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4>@category.CategoryName</h4>
                    </div>
                    <div class="panel-body">
                        <p>@category.Description</p>
                        <a href="@Url.Action("Index", "Products", new { categoryId = category.CategoryID })" class="btn btn-info btn-sm">View Products</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    .product-card {
        margin-bottom: 20px;
        min-height: 450px;
    }
    
    .product-card h3 {
        margin-top: 15px;
        min-height: 50px;
    }
</style>
