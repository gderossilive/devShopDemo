// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "devShop Azure Development",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:noble",

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		// Azure Developer CLI (azd)
		"ghcr.io/azure/azure-dev/azd:latest": {
			"version": "latest"
		},
		// Azure CLI
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"version": "latest",
			"installBicep": true
		},
		// PowerShell (for deployment scripts)
		"ghcr.io/devcontainers/features/powershell:1": {
			"version": "latest"
		},
		// Git (enhanced)
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest"
		},
		// GitHub CLI (optional, useful for CI/CD)
		"ghcr.io/devcontainers/features/github-cli:1": {
			"version": "latest"
		},
		// Docker (for containerized deployments if needed)
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest"
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "bash -c 'if [ ! -f .env ]; then cp .env.example .env && echo \"âœ… Created .env from .env.example - Please edit with your values\"; fi' && pwsh -Command 'Write-Host \"devShop Azure Environment Ready!\" -ForegroundColor Green; Write-Host \"Tools installed: azd, az, pwsh, git, gh, docker\" -ForegroundColor Cyan; Write-Host \"\"; Write-Host \"ðŸ“‹ Quick Start:\" -ForegroundColor Yellow; Write-Host \"  1. Edit .env with your passwords and MY_IP\" -ForegroundColor White; Write-Host \"  2. Run: ./deploy.sh devShop\" -ForegroundColor White; Write-Host \"\"; azd version; az version --output table'",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-bicep",
				"ms-azuretools.azure-dev",
				"ms-vscode.azure-account",
				"ms-vscode.powershell",
				"ms-dotnettools.csharp",
				"GitHub.copilot"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "pwsh",
				"files.associations": {
					"*.bicep": "bicep"
				}
			}
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
